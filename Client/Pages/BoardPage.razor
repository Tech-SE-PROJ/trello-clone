@page "/boards/{boardName}"
@using MudBlazor;
@using trello_clone.Shared
@using trello_clone.Shared.Classes
@using Microsoft.AspNetCore.Components
@using System.ComponentModel.DataAnnotations
@using trello_clone.Client.Components
@inject HttpClient Http
@inject NavigationManager NavManager
@inject StateContainer StateContainer
@implements IDisposable

<style>
    .board-container {
        width: 100%;
        height: 100vh;
    }

    .board-title {
        display: inline-block;
        width: 100%;
        height: 80%;
    }

    .column-section {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        height: 80%;
        width: 100%;
    }

    .add-taskcard {
        display: flex;
        flex-direction: row;
        width: 33%;
    }
</style>

<div class="board-container">
    @if (Board == null)
    {
        <p>... Loading</p>
    }
    else
    {
        <h1>@Board.Name</h1>

        <EditForm class="add-taskcard" Model="newTaskCard" OnValidSubmit="AddTaskCard">
            <InputText class="form-control mx-2" @bind-Value="newTaskCard.Name" />
            <MudButton ButtonType="ButtonType.Submit" StartIcon="@Icons.Material.Filled.Add" FullWidth="true" Class="rounded-lg py-2">Add Work Item</MudButton>
        </EditForm>
    

        <div class="column-section">
            @foreach (var column in Columns)
            {
                <ColumnComponent Column="@column" />
            }
        </div>
    }

</div>

@code {
    [Parameter]
    public string? boardName { get; set; }

    public Board Board => StateContainer.SelectedBoard;

    public List<Column> Columns => Board.Columns;

    public TaskCard newTaskCard = new TaskCard();

    protected override void OnInitialized()
    {
        StateContainer.OnChange += StateHasChanged;
    }

    public async Task AddTaskCard()
    {
        var columnId = Columns.First().Id;
        var newCardIndex = Columns.First().TaskCards != null ? Columns.First().TaskCards.Count : 0;

        var updatedTaskCards = await Http.GetFromJsonAsync<List<TaskCard>>($"AddTaskCard/{newTaskCard.Name}/{columnId}/{newCardIndex}");

        Columns.First().TaskCards = updatedTaskCards;
        //await GetBoards();

        newTaskCard = new TaskCard();
    }

    public void Dispose()
    {
        StateContainer.OnChange -= StateHasChanged;
    }
}
